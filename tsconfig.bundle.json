{
    "compilerOptions": {
        "module": "system",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es2015", "dom"],
        "typeRoots": ["node_modules/@types/"],
        "noImplicitAny": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "declaration": false,
        "rootDir": "./src",
        "outFile": "./bundles/ng2-bs3-modal.js"
    },
    "exclude": [
        "node_modules",
        "demo",
        "bundles",
        "components",
        "directives",
        "src/test",
        "**/*.spec.ts"
    ]
}
